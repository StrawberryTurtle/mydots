##---------- Screenshot ----------##

Print + {_,super,ctrl}
	{klipper --area, klipper --win, klipper --now}

alt + p
	klipper --area

super + alt + p
	klipper --menu

##---------- Bspwm ----------##

# Hide/Unhide Window
super + h
	konceal

# Close App
super + {_,shift + }c
	bspc node -{c,k}

# kill window
ctrl + shift + Escape
    xkill

# Quit/Restart bspwm
ctrl + shift + {r,q}
	bspc {wm -r,quit}
	
# Reload Keybindings
ctrl + alt + r
	pkill -USR1 -x sxhkd

##---------- Nodes ----------##

ctrl + {e}
        bspc desktop -f {next.local}

# Switch workspace or Send focused Node to another workspace
{ctrl,super} + {1-4}
        bspc {desktop -f,node -d} '^{1-4}' '--follow'

# Switch or Swap Nodes
alt + {_,ctrl + } {h,j,k,l}
        bspc node {-f,-s} {north,west,south,east}

# Toggle Fullscreen
super + space
    bspc node -t "~"fullscreen

